{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "files": {
        "ignore": ["node_modules", "dist", "build"]
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "all": true,
            "complexity": {
                "noForEach": "warn"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "ignore": [],
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 80
    },
    "json": {
        "parser": {
            "allowComments": true,
            "allowTrailingCommas": false
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "jsxQuoteStyle": "double",
            "trailingComma": "all",
            "semicolons": "always",
            "arrowParentheses": "always",
            "quoteProperties": "asNeeded"
        }
    },
    "overrides": [
        {
            "include": ["src/main.ts"],
            "linter": {
                "rules": {
                    "complexity": {
                        "noForEach": "off"
                    },
                    "suspicious": {
                        "noConsoleLog": "off"
                    }
                }
            }
        }
    ]
}
