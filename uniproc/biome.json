{
    "$schema": "../node_modules/@biomejs/biome/configuration_schema.json",
    "extends": ["../biome.json"],
    "linter": {
        "rules": {
            "correctness": {
                "noUndeclaredDependencies": "warn"
            },
            "style": {
                "useImportType": "warn"
            },
            "suspicious": {
                "useAwait": "warn"
            }
        }
    },
    "overrides": [
        {
            "include": ["src/main.ts"],
            "linter": {
                "rules": {
                    "complexity": {
                        "noForEach": "off"
                    },
                    "suspicious": {
                        "noConsoleLog": "off"
                    },
                    "correctness": {
                        "noUnusedVariables": "warn"
                    }
                }
            }
        }
    ]
}
