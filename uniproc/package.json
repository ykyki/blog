{
    "name": "uniproc",
    "private": true,
    "type": "module",
    "main": "dist/lib.js",
    "scripts": {
        "main": "bun run ./src/main.ts",
        "build": "pnpm run -F uniproc --parallel \"/build:.+/\"",
        "build:dist": "tsc --project ./tsconfig.build.json && tsc-alias -p ./tsconfig.build.json && bun run ./build.js",
        "clean": "pnpm run -F uniproc --parallel \"/clean:.+/\"",
        "clean:dist": "rm -rf ./dist",
        "test": "pnpm run -F uniproc --parallel \"/test:.+/\"",
        "test:bun": "bun test"
    },
    "exports": {
        ".": {
            "import": "./dist/lib.js"
        }
    },
    "devDependencies": {
        "@types/js-yaml": "^4.0.8",
        "@types/mdast": "^4.0.2",
        "@types/node": "^20.8.10",
        "bun-types": "^1.0.14",
        "tsc-alias": "^1.8.8",
        "typescript": "^5.2.2"
    },
    "dependencies": {
        "js-yaml": "^4.1.0",
        "remark-frontmatter": "^5.0.0",
        "remark-gfm": "^4.0.0",
        "remark-math": "^6.0.0",
        "remark-parse": "^11.0.0",
        "unified": "^11.0.4",
        "unist-util-is": "^6.0.0",
        "unist-util-visit": "^5.0.0",
        "zod": "^3.22.4"
    }
}
