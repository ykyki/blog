{
    "name": "uniproc",
    "private": true,
    "type": "module",
    "main": "dist/lib.js",
    "scripts": {
        "main": "bun run ./src/main.ts",
        "build": "pnpm run -F uniproc --parallel \"/build:.+/\"",
        "build:dist": "tsc --project ./tsconfig.build.json && tsc-alias -p ./tsconfig.build.json && bun run ./build.js",
        "clean": "pnpm run -F uniproc --parallel \"/clean:.+/\"",
        "clean:dist": "rm -rf ./dist",
        "test": "pnpm run -F uniproc --parallel \"/test:.+/\"",
        "test:bun": "bun test"
    },
    "exports": {
        ".": {
            "import": "./dist/lib.js"
        }
    },
    "devDependencies": {
        "@types/js-yaml": "^4.0.9",
        "@types/mdast": "^4.0.4",
        "@types/node": "^22.13.1",
        "bun-types": "^1.2.2",
        "mdast-util-math": "^3.0.0",
        "tsc-alias": "^1.8.10",
        "typescript": "^5.7.3"
    },
    "dependencies": {
        "js-yaml": "^4.1.0",
        "remark-frontmatter": "^5.0.0",
        "remark-gfm": "^4.0.1",
        "remark-math": "^6.0.0",
        "remark-parse": "^11.0.0",
        "unified": "^11.0.5",
        "unist-util-is": "^6.0.0",
        "unist-util-visit": "^5.0.0",
        "zod": "^3.24.1"
    }
}
